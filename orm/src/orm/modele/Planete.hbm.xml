<?xml version="1.0"?><!DOCTYPE hibernate-mapping
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-2.0.dtd"><hibernate-mapping>

    <class name="orm.modele.Planete" table="exoplanetes">
        <id name="nom" type="string" column="planete">
            <generator class="native"/>
        </id>
        <property name="etoile" type="string" not-null="true" />
		<property name="temperature" type="string" not-null="true" />
		<property name="flux" type="float" not-null="true" />
		<property name="distance" type="float" not-null="true" />
		<property name="periode" type="float" not-null="true" />
    </class>
</hibernate-mapping>